extends layout

block content
    main(class="main_content")
        h1 Genre: #{genre.name}
        br
        div(style='margin-left:20px;margin-top:20px')
            h1 Games
            hr
            br
            div(class="game_cards_container")
                each game in genre_games
                    a(href=game.url class="game_card" style=`--bg-image: url(${game.photo})`)
                        span(class="game_card_title") #{game.name}
                else
                    p This genre has no games
        br  
        hr
        br
        button
            a(href=genre.url+'/delete') Delete
        button 
            a(href= genre.url+'/update') Update