extends layout

block content
  main(class="main_content")
    section
      h1(class="main_content_title")= title
      h1 Site Summary

      if error
        p Error getting dynamic content.
      else
        p We have the following records:
        ul(class="records_container")
          li
            a(href='/games') Games:10
          li
            a(href='/developers') Developers:3
          li
            a(href='/genres') Genres:4
          li
            a(href='/platforms') Platforms:5
          li
            a(href='/reviews') Reviews:6
          
    section
      h1 Spotlight 
      a(class="featured")
        h1(class="featured_title") Metal Gear Solid 2
        //- button(class="featured_button") Check It Out
    section 
      h1 Top Rated 
      div(class="cards_container")
        a(class="card" style="--bg-image: url(/images/mgs2.png)")
          span(class="card_title") Metal Gear Solid 2
        a(class="card" style="--bg-image: url(/images/mgs31.jpg)")
          span(class="card_title") Metal Gear Solid 3
        a(class="card" style="--bg-image: url(/images/mgs3.jpg)")
          span(class="card_title") Final Fantasy X
        a(class="card" style="--bg-image: url(/images/bloodborne.webp)")
          span(class="card_title") Bloodborne
        a(class="card" style="--bg-image: url(/images/darksouls.jpg)")
          span(class="card_title") Dark Souls
  